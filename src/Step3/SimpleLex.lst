%using ScannerHelper;
%namespace SimpleScanner

Alpha 	[a-zA-Z_]
Digit   [0-9] 
AlphaDigit {Alpha}|{Digit}
INTNUM  {Digit}+
REALNUM {INTNUM}\.{INTNUM}
ID {Alpha}{AlphaDigit}* 
DotChr [^\r\n]
OneLineCmnt \/\/{DotChr}*

// Здесь можно делать описания типов, переменных и методов - они попадают в класс Scanner
%{
  public int LexValueInt;
  public double LexValueDouble;
%}

%x COMMENT
%x StringConst

%%
"'" {
	BEGIN(StringConst);
}

<StringConst> [^']* {
	return (int)Tok.STRING;
}

<StringConst> "'" {
	BEGIN(INITIAL);
}

{INTNUM} { 
  LexValueInt = int.Parse(yytext);
  return (int)Tok.INUM;
}

{REALNUM} { 
  LexValueDouble = double.Parse(yytext);
  return (int)Tok.RNUM;
}

begin { 
  return (int)Tok.BEGIN;
}

end { 
  return (int)Tok.END;
}

{String} {
//^^^^^
// Error: Unknown lexical category <String> 
// -----------------------------------------
  // remove quotes
  yytext = yytext.Substring(1, yytext.Length - 2);
  return (int)Tok.STRING;
}

{OneLineCmnt} {
  return (int)Tok.COMMENT;
}

cycle { 
  return (int)Tok.CYCLE;
}

{ID}  { 
  return (int)Tok.ID;
}

":" { 
  return (int)Tok.COLON;
}

":=" { 
  return (int)Tok.ASSIGN;
}

";" { 
  return (int)Tok.SEMICOLON;
}

[^ \r\n] {
	LexError();
	return 0; // конец разбора
}

